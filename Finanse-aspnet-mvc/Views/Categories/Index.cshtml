@model IEnumerable<Finanse_aspnet_mvc.Models.Categories.Category>

@{
    ViewBag.Title = "Kategorie";
}
            
<div style="margin: 16px;">
    <i class="fa fa-tags" style="font-size: 24px"></i>
    <h2 style="display: inline; margin-left: 16px; font-weight: lighter">Kategorie</h2>
</div>
<hr/>

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class = "btn button-round button-lg animate-button" })
</p>

<ol>
    @foreach (var item in Model) {
        @Html.Partial("_Category", item)
    }
</ol>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modalform")
}