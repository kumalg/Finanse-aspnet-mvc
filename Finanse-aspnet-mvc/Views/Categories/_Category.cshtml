@model Finanse_aspnet_mvc.Models.Categories.Category
<li>
    <div>
        @Html.DisplayFor(modelItem => Model.Name)
        @if (!Model.CantDelete) {
            <div class="btn-group" data-toggle="buttons">
                <button type="button" class="btn btn-sm dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true">
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Edit", "Edit", "Categories", new { id = Model.Id }, new { data_modal = "" })</li>
                    <li>@Html.ActionLink("Delete", "Delete", "Categories", new { id = Model.Id }, new { data_modal = "" })</li>
                </ul>
            </div>
        }
        <ol>
            @foreach (var subCategory in Model.SubCategories) {
                @Html.Partial("_SubCategory", subCategory)
            }
        </ol>
    </div>
</li>