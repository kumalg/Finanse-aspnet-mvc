@using Finanse_aspnet_mvc.Models.Operations
@model Finanse_aspnet_mvc.Models.Operations.OperationBase

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Szczegóły operacji</h4>
</div>

<div class="modal-body">
    @{
        var deleteModalId = "deleteModal" + Model.Id;
    }

    <h1>@Model.SignedCost</h1>
    <h3>@Model.TitleOrCategoryName</h3>

    <hr />

    <h6>@Model.Category.Name</h6>
    @if (Model is Operation) {
        <h6>@((Model as Operation).Date)</h6>
    }
    <h6>operation.Account.Name</h6>

    @if (!string.IsNullOrEmpty(Model.MoreInfo)) {
        <hr />
        <h6>@Model.MoreInfo</h6>
    }
</div>

<div class="modal-footer">
    @Html.ActionLink("Edytuj", "Edit", "Operations", new { id = Model.Id }, new { @class = "btn btn-default" })
    <button type="button" class="btn btn-danger" data-dismiss="modal" data-toggle="modal" data-target="#@deleteModalId">Usuń</button>
</div>